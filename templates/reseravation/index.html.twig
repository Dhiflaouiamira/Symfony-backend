{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Status</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateDebut }}</td>
                <td>{{ reservation.DateFin }}</td>
                <td>{{ reservation.Status }}</td>
                <td>{{ reservation.Montant }}</td>
                <td>
                    <a href="{{ path('app_reseravation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reseravation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reseravation_new') }}">Create new</a>
{% endblock %}
